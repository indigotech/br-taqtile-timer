  body
    .tq-container.tq-bg-black
      #tq-bg.tq-bg-animated.tq-bg-red
      #tq-timer.tq-center-aligned
        #tq-display.tq-clock 
          span#tq-minutes.active 10
          | :
          span#tq-seconds 00
        #tq-instructions.instructions
          img.key_holder.arrows(src="images/ic_key_arrows.png")
          .text to set timer
          img.key_holder.space(src="images/ic_key_space.png")
          .text to start/stop
          img.key_holder.reset(src="images/ic_key_reset.png")
          .text to reset
          
      
